@{
    Layout = User.Identity.IsAuthenticated ? "_LayoutOutSide" : "_Layout";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Klo Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #E6F0FA;
        }

        .card {
            border-radius: 15px;
        }

        .qr-code {
            width: 200px;
            height: 200px;
            background-color: #ccc;
        }
    </style>
</head>
<body class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="text-center">
        <h1 class="text-primary fw-bold">Klo</h1>
        <p class="text-secondary mt-2">Đăng nhập tài khoản Klo để kết nối với ứng dụng Klo Web</p>
        <div class="card shadow mt-4 p-4 mx-auto" style="max-width: 400px;">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h5 mb-0">Đăng nhập qua mã QR</h2>
                <i class="fas fa-bars text-secondary"></i>
            </div>
            <div class="d-flex flex-column align-items-center">
                <div class="qr-code mb-3">
                    <img src="/Image/QRCODE.png" />
                </div>
                <button class="btn btn-primary mb-2">Lấy mã mới</button>
                <p class="text-primary">Chỉ dùng để đăng nhập Klo trên máy tính</p>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>